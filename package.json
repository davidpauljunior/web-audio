{
  "name": "web-audio-api",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build:css": "mkdir -p ./dist/css && node-sass --output-style compressed ./src/scss/drums.scss > ./dist/css/drums.css",
    "build:js": "mkdir -p ./dist/js && browserify ./src/js/main.js -o ./dist/js/main.js -t babelify --presets es2015",
    "watch:css": "onchange './src/scss/**/*.scss' -- npm run build:css",
    "watch:js": "onchange './src/js/**/*.js' -- npm run build:js",
    "dev": "npm run build:css & npm run build:js && npm run watch:css & npm run watch:js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "David Paul",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "include-media": "^1.4.9",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1"
  }
}
